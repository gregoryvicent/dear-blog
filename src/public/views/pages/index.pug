      p.post-Description #{description}
      figure.post-BoxImg 
        img(src=`assets/img/posts/${img}`, alt= postTitle, class="post-Img")
      div(class=["negative-box", "post-boxTitle"])
        h3.post-Title #{postTitle}
        p(class=["negative-text", "text-small"]) #{date}

